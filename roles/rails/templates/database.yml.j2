default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: "{{ dbuser }}"
  password: "{{ dbpassword }}"
  socket: /var/lib/mysql/mysql.sock
development:
  <<: *default
  database: eFriends_development
test:
  <<: *default
  database: eFriends_test
production:
  <<: *default
  database: eFriends_production
